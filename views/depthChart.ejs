<div class="bigContainer">
  <!-- Includes topnav -->
  <%- include("partials/topnav") %>
  <div class="bodyContainer">
    <!-- Includes Side navigation -->
    <%- include("partials/sidenav") %>
    <div class="chBody" style="text-align: center;">
      <div id="offenseLine">
        <div class="row" style="margin-right: 0; margin-left: 0;">
          <span class="help col-sm-5" style="text-align: left;">Depth Chart</span>
          <button class="btn btn-primary" id="myBtn">Update Rankings</button>
        </div>
        <br>
        <br>
        <span class="help">Offense</span>
        <table class="redTable" id="viewTable" style="width: 95%;" border="1">
          <tr>
            <th></th>
            <th>First String</th>
            <th>Second String</th> 
            <th>Third String</th>
            <th>Fourth String</th>
            <th>Other</th>
          </tr>
          <form action="/coach/position" method="POST">
          <% var k = 0;
          for(var i = 0; i < offPlayersPos.length; i++) { %>
          <tr>
            <td><button class="btn btn-primary" type="submit" name="pos" value="<%- offPlayersPos[i] %>" style="font-size: 13px;"><%= offPlayersPos[i] %></button></td>
            <%
            var playerIndex = -1;
            var c = 0;
            while (c < offPlayers.length && offPlayers[c].Pos != offPlayersPos[i]) {
              c++;
            }
            if (c < offPlayers.length && offPlayers[c].Pos == offPlayersPos[i]) {
              playerIndex = c;
            }
            k = 0;
            while (playerIndex >= 0 && playerIndex < offPlayers.length && offPlayers[playerIndex].Pos == offPlayersPos[i]) { %>
              <% if (k < 5) { %>
              <td><%= offPlayers[playerIndex].FullName %></td>
              <% } %>
              <% k++; playerIndex++;%>
            <% } %>
          </tr>
          <% } %>
        </form>
        </table>
        <br><br>
        <span class="help">Defense</span>
        <table class="redTable" id="viewTable" style="width: 95%;" border="1">
          <tr>
            <th></th>
            <th>First String</th>
            <th>Second String</th> 
            <th>Third String</th>
            <th>Fourth String</th>
            <th>Other</th>
          </tr>
          <form action="/coach/position" method="POST">
          <% j = 0; k = 0;
          for(var i = 0; i < defPlayersPos.length; i++) { %>
          <tr>
            <td><button class="btn btn-primary" type="submit" name="pos" value="<%- defPlayersPos[i] %>" style="font-size: 13px;"><%= defPlayersPos[i] %></button></td>
            <% k = 0;
            while (j < defPlayers.length && defPlayers[j].Pos == defPlayersPos[i]) { %>
              <% if (k < 5) { %>
              <td><%= defPlayers[j].FullName %></td>
              <% } %>
              <% j++; k++;%>
            <% } %>
          </tr>
          <% } %>
        </form>
        </table>
        <br><br>
        <span class="help">Special Teams</span>
        <table class="redTable" id="viewTable" style="width: 95%; margin-bottom: 40px;" border="1">
          <tr>
            <th></th>
            <th>First String</th>
            <th>Second String</th> 
            <th>Third String</th>
            <th>Fourth String</th>
            <th>Other</th>
          </tr>
          <form action="/coach/position" method="POST">
          <% j = 0; k = 0;
          for(var i = 0; i < spePlayersPos.length; i++) { %>
          <tr>
            <td><button class="btn btn-primary" type="submit" name="pos" value="<%- spePlayersPos[i] %>" style="font-size: 13px;"><%= spePlayersPos[i] %></button></td>
            <% k = 0;
            while (j < spePlayers.length && spePlayers[j].Pos == spePlayersPos[i]) { %>
              <% if (k < 5) { %>
              <td name="pos"><%= spePlayers[j].FullName %></td>
              <% } %>
              <% j++; k++;%>
            <% } %>
          </tr>
          <% } %>
          </form>
        </table>

        <!-- Start of Modal Content for entering practice grades -->
      <!-- The Modal PopUp Window-->
      <div id="myModal" class="modal" style="overflow-y:auto;">
        <!-- Modal content -->
        <div class="modal-content">
          <div class="form-group" role="group" aria-label="Button group with nested dropdown">
          <form id="modalForm" action="/coach/depthChart" method="POST">
            <!-- <button type="button" class="btn btn-primary">Sort By</button> -->
            <div class="dropdown" role="group" style="padding-top: 10px; text-align: center;">
              <span class="close">&times;</span>
              <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Choose Position
              </button>
              <div class="dropdown-content" aria-labelledby="btnGroupDrop1">
                <!-- 'SS','MLB','FS','K','P','CB', ,'LS'-->
                <% var allPlayers = ['QB','RB','FB','WR','TE','LT','LG','C','RG','RT','CB','DB','DE','DL','DT','FS','ILB','LB','MLB','OLB','SS','K/P','LS']; %>
                <button class="dropdown-item" type="submit" name="type" value="full" >ALL</button>
                <% for (var i = 0; i < allPlayers.length; i++) { %>
                  <button class="dropdown-item" type="submit" name="type" value="<%- allPlayers[i] %>">View <%= allPlayers[i] %>s</button>
                <% } %>
              </div>
            </div>
            </form>
          </div>
          <br>
          <% if (players.length > 0) { %>
          <span class="help"><%= players[0].Pos %></span>
          <br>
          <form action="/coach/submitRank" method="POST">
          <% for (var i = 0; i < players.length; i++) { %>
            <!-- <span class="posLabel"><%= players[i].FullName %></span> -->
            <input type="name" name="playerNames" value="<%- players[i].FullName %>" readonly>
            <input type="number" name="rank" min='1' max='5' value="<%- players[i].Rank %>">
            <input class="hidden" name="type" value="<%- players[i].Pos %>" hidden>
            <br>
          <% } %>
          <div style="padding-top: 15px;">
            <input type="submit" class="btn btn-primary dropdown-toggle" value="Submit">
          </div>
          
          </form>
          <% } %>
        </div>
      </div>
      

      
    </div>
  </div>
</div> 
