              <span class="Dname"> <%= aPlayers[offPlayerIndices[i]].Rank %></span>
              <!-- <span class="num"><%= aPlayers[offPlayerIndices[i]].Pos %></span> -->
            <% prevPos = curPos; %>
          <% } %>
