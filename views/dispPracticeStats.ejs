    </head>
    <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Season Practice Statistics</h1>
      <div class= 'dropdown'>
        <form action="/stats/dispPracticeStats" method="POST">
            <label for="pos">Choose a Position:</label>
            <select name="pos" id="pos">
              <option value="WR">WR</option>
              <option value="LT">LT</option>
              <option value="LG">LG</option>
              <option value="C">C</option>
              <option value="RG">RG</option>
              <option value="RT">RT</option>
              <option value="TE">TE</option>
              <option value="QB">QB</option>
              <option value="RB">RB</option>
            </select>
            <br><br>
            <input type="submit" value="Submit">
          </form>
      </div>
<div>
    <table class="redTable">
      <thead>
      <tr>
      <th id="topLeft"><%= players[0].FirstName + ' ' + players[0].LastName + '(' + players[0].Pos + ')'; %></th>
      <th>Practice Dropdown</th>
      </tr>
      </thead>
      <tfoot>
      <tr>
      <td colspan="3">
      <div class="links">
        <a class="active" onclick="prevPlayer();">Previous Player</a> <a class="active" onclick="nextPlayer();">Next Player</a>
      </div>
      </td>
      </tr>
      </tfoot>
      <tbody>
      <tr>
      <td>
        <table class="redTable">
          <tbody>
          <tr>
          <td>
            <% for(var i = 0; i < players.length; i++) { %>
              <ul>
                <button id="playerButton" onclick="changePlayer();"><%=players[i].FirstName + ' ' + players[i].LastName;%></button>
              </ul>
              <% } %>
          </td>
          </tr>
          </tbody>
          </table>
      </td>
      <td>
        <table class= "redTable">
          <thead>
            <tr>
              <th id="playerName">Player Name Here</th>
            </tr>
          </thead>
          <table onload='javascript:hideTables();'>
            <input type='button' onClick='javascript:showView();' value='VIEW'>
            <input type='button' onClick='javascript:showEdit();' value='EDIT'>
            <table class= "redTable" id='viewTable' border=1>
              <tbody>
                <tr>
                  <td></td>
                  <td>Season Average(Overall)</td>
                  <td>Previous Week</td>
                  <td>Season Average(Technique)</td>
                  <td>Season Average(Assignment)</td>
                  <td>Season Average(Execution)</td>
                </tr>
                <% for(var i = 0; i < players.length; i++) { %>
                <tr>
                  <td><%=players[i].FirstName + ' ' + players[i].LastName;%></td>
                  <td>#</td>
                  <td>#</td>
                  <td>#</td>
                  <td>#</td>
                  <td>#</td>
                </tr>
                <% } %>
              </tbody>
            </table>
            <table class="redTable" id='editTable' border=1>
              <tbody>
                  <form action="/stats/addIntang">
                      <tr>
                        <td>
                          <label for="player">Player Name</label>
                          <input id="player" name="player" value='none' readonly>
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <label for="scale">Today's Date</label>
                          <input id="date" name="date" readonly>
                          <script type="text/javascript">
                            document.getElementById('date').value = Date();
                          </script>
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <label for="scale">Grading Scale</label>
                          <input type="text" name="scale" id="scale" placeholder="10">
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <label for="intang1">Intangible 1</label>
                          <input type="text" name="intang1" id="intag1" placeholder="Alignment">
                          <label for="grade1">Grade</label>
                          <input type="text" name="grade1" id="grade1">
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <label for="intang2">Intangible 2</label>
                          <input type="text" name="intang2" id="intag2" placeholder="Assignment">
                          <label for="grade2">Grade</label>
                          <input type="text" name="grade2" id="grade2">
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <label for="intang3">Intangible 3</label>
                          <input type="text" name="intang3" id="intag3" placeholder="Technique">
                          <label for="grade3">Grade</label>
                          <input type="text" name="grade3" id="grade3">
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <label for="intang4">Intangible 4</label>
                          <input type="text" name="intang4" id="intag4" placeholder="Execution">
                          <label for="grade4">Grade</label>
                          <input type="number" name="grade4" id="grade4" max="10">
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <button type="submit" class="btn btn-primary btn-block">Submit Grade</button>
                        </td>
                      </tr>
                  </form>
                </tbody>
            </table>
          </table>
        </table>
      </td>
      </tr>
      </tbody>
      </table>
  </div>

<script>
  //called on lines 170-172
  function showView(){
    document.getElementById('viewTable').style.visibility = "visible";
    document.getElementById('editTable').style.visibility = "hidden";
  }
  function showEdit(){
    document.getElementById('viewTable').style.visibility = "hidden";
    document.getElementById('editTable').style.visibility = "visible";
  }
  function hideTables(){
    document.getElementById('viewTable').style.visibility = "hidden";
    document.getElementById('editTable').style.visibility = "hidden";
  }
</script>

<script>
  //called on line 155
  function changePlayer() {
    //function to update name of player and intangibles
    var name = document.getElementById('playerButton').value;
    document.getElementById('playerName').innerHTML = "Grading for" + name;
    document.getElementById("topLeft").innerHTML = name + '()';
    document.getElementById("player").innerHTML = name;
  }
</script>
