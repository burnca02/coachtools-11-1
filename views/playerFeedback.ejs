<meta name="viewport" content="width=device-width, initial-scale=1" />
<style>
  @media all and (min-width: 600px) {
    .bodyContainer {
      flex: 2 0px;
    }
    .sidenav {
      order: 1;
    }
    .rBody {
      order: 2;
    }
  }
  .dropdown {
    position: center;
    display: block;
  }

  .dropdown-content {
    display: none;
    /* position: static; */
    background-color: #f1f1f1;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {
    background-color: #ddd;
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dDown:hover .dropdown-content {
    display: block;
  }

  .dropdown:hover .dropbtn {
    background-color: rgb(192, 26, 26);
  }
</style>
<div class="bigContainer">
  <!-- header -->
  <%- include("partials/topnav") %>
  <div class="bodyContainer">
    <%- include("partials/sidenav") %>
    <div class="rBody" style="text-align: center; align-content: center;">
      <h2>Questionnaire Dropdown</h2>
      <p>Move the mouse over the button to open the dropdown menu.</p>

      <div class="rosterRow2">
        <div class="dDown" style="text-align: center; padding-right: 50px;">
            <button class="btn btn-primary" href="./questionnaire">Create New Questionnaire</button>
            <div class="dropdown-content">
              <a href="./questionnaire">New Meeting Questionnaire</a>
              <a href="./questionnaire">New Practice Questionnaire</a>
              <a href="./questionnaire">New Lifting Questionnaire</a>
            </div>
          </div>
          <div class="dDown" style="text-align: center;">
          <form action="./viewResponse" method="POST">
            <button class="btn btn-primary">View Questionnaire Responses</button>
            <div class="dropdown-content">
              <a><input type="radio" value="Meeting" name="type" href="./viewResponse"
                />Meeting Questionnaire Responses</a>
              <a><input type="radio" value="Practice" name="type" href="./viewResponse"
                />Practice Questionnaire Responses</a>
              <a><input type="radio" value="Training" name="type" href="./viewResponse"
                />Lifting Questionnaire Responses</a>
              <a><button type="submit" href="./viewResponse">Go</button></a>
            </div>
        </form>
      </div>
    </div>
    <br><br>
    <p class="lead mt-4">
      Done? <a href="/coachHome">Home Page</a>
    </p>
  </div>
</div>

  <script>
    var dropdown = document.getElementsByClassName("dropdown-btn");
    var i;

    for (i = 0; i < dropdown.length; i++) {
      dropdown[i].addEventListener("click", function () {
        this.classList.toggle("active");
        var dropdownContent = this.nextElementSibling;
        if (dropdownContent.style.display === "inline-block") {
          dropdownContent.style.display = "none";
        } else {
          dropdownContent.style.display = "inline-block";
        }
      });
    }
  </script>
</div>
