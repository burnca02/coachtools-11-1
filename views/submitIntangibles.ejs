<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Submit Position Specific Intangibles</h1>
        <%- include('./partials/messages'); %>
        <h3>Submit the Intangibles that you would like to grade players on. These Intangibles will be position specific. Rank each Intangible from 1 to 4 in order of importance.</h3>
        <form action="/stats/addIntang" method="POST">
          <div class='dropdown' style="text-align:center">
                <br>
                <h5>Select Position Group:</h5>
                <select name="pos" id="pos" class="btn btn-primary dropdown-toggle mt-3">
                  <% for(var i = 0; i < positions.length; i++) { %>
                  <option value="<%- positions[i] %>"><%= positions[i] %></option>
                  <% } %>
                </select>
                <br><br>
            </form>
          </div>
          <div class="form-group">
            <label for="scale">Grading Scale</label>
            <input type="scale" id="scale" name="scale" class="form-control" value="10" placeholder="10" readonly/>
          </div>
          <div class="form-group">
            <label for="i1">Intangible 1(Most Important)</label>
            <input type="i1" id="i1" name="i1" class="form-control" placeholder="Enter Intangible Name"/>
            <input type="il1" id="il1" name="il1" class="form-control" value="1" placeholder="1" readonly/>
          </div>
          <div class="form-group">
            <label for="i2">Intangible 2</label>
            <input type="i2" id="i2" name="i2" class="form-control" placeholder="Enter Intangible Name"/>
            <input type="il2" id="il2" name="il2" class="form-control" value="2" placeholder="2" readonly/>
          </div>
          <div class="form-group">
            <label for="i3">Intangible 3</label>
            <input type="i3" id="i3" name="i3" class="form-control" placeholder="Enter Intangible Name"/>
            <input type="il3" id="il3" name="il3" class="form-control" value="3" placeholder="3" readonly/>
          </div>
          <div class="form-group">
            <label for="i4">Intangible 4(Least Important)</label>
            <input type="i4" id="i4" name="i4" class="form-control" placeholder="Enter Intangible Name"/>
            <input type="il4" id="il4" name="il4" class="form-control" value="4" placeholder="4" readonly/>
          </div>
          
          <button type="submit" class="btn btn-primary btn-block">Submit Intangibles</button>
        </form>
        <p class="lead mt-4">
          Done? <a href="/coachHome">Home Page</a>
        </p>
      </div>
    </div>
  </div>