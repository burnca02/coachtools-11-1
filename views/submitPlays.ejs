<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Submit Plays</h1>
        <%- include('./partials/messages'); %>
        <h3>Submit the plays that your uses.</h3>
        <form action="/stats/addPlays" method="POST">
          <div class="form-group">
            <label for="p1">Play 1</label>
            <input type="p1" id="p1" name="p1" class="form-control" placeholder="Enter Play Name"/>
          </div>
          <div class="form-group">
            <label for="p2">Play 2</label>
            <input type="p2" id="p2" name="p2" class="form-control" placeholder="Enter Play Name"/>
          </div>
          <div class="form-group">
            <label for="p3">Play 3</label>
            <input type="p3" id="p3" name="p3" class="form-control" placeholder="Enter Play Name"/>
          </div>
          <div class="form-group">
            <label for="p4">Play 4</label>
            <input type="p4" id="p4" name="p4" class="form-control" placeholder="Enter Play Name"/>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit Plays</button>
        </form>
        <p class="lead mt-4">
          Done? <a href="/coachHome">Home Page</a>
        </p>
      </div>
    </div>
  </div>